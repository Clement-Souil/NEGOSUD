<Window x:Class="NEGOSUD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NEGOSUD"
        mc:Ignorable="d"
        Title="Connexion" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <!-- Titre du formulaire -->
            <TextBlock Text="Connexion à NEGOSUD" FontSize="24" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,20" />

            <!-- Champ Nom d'utilisateur -->
            <Label Content="Nom d'utilisateur:"/>
            <TextBox x:Name="UsernameTextBox" Width="250" Height="30" Margin="0,0,0,10"/>

            <!-- Champ Mot de passe -->
            <Label Content="Mot de passe:"/>
            <PasswordBox x:Name="PasswordBox" Width="250" Height="30" Margin="0,0,0,20"/>

            <!-- Bouton de connexion -->
            <Button Content="Connexion" Width="100" Height="30" 
                    HorizontalAlignment="Center" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
